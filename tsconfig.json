{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "jsx": "react",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "skipLibCheck": true,
    "module": "es6",
    "outDir": "./lib"
  },
  "typedocOptions": {
    "mode": "file",
    "out": "docs",
    "excludePrivate": true,
    "excludeProtected": true,
    "excludeNotExported": true,
    "target": "ES2015"
  },
  "include": ["src/**/*"]
}
