{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "jsx": "react",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "target": "ES2015",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "module": "ES2015",
    "outDir": "./lib"
  },
  "typedocOptions": {
    "mode": "file",
    "out": "docs",
    "excludePrivate": true,
    "excludeProtected": true,
    "excludeNotExported": true,
    "target": "ES2015"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/__tests__/"
  ]
}
